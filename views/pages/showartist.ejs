<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../style/style.css">
    <script src="/js/Authntication.js"></script>

</head>
<body>       
     <%- include('header')%>

    
    <main>
        <hr class="hr2">
            <hr class="hr">
            <hr class="hr">
            <hr class="hr1">

        <section class="flex">
<section id='addSongByArtist'  class="A-flex">
            <% songs.forEach(song=>{%>
           <div class="card">
            <img class="logo_babil" src="/images/logo200cropped.png">
                <img class="imgSong" src="<%=song.image%>">
                <h3 class="title" ><%=song.title%></h3>
                <h2 class="title"><%= song.name%></h2>
        <audio controls class="button">  <source src="<%=song.preview%>"type="audio/mpeg"></audio>
                <form id="addSong<%=song.id%>" action="/addsong/<%=user%>" method="post" >
                    <input type="hidden" name="id" id="id" value="<%=song.id%>">
                    <input type="hidden" name="user" id="user" value="<%=user%>">
                    <input type="hidden" name="title" id="title" value="<%=song.title%>">
                    <input type="hidden" name="preview" id="preview" value="<%=song.preview%>">
                    <input type="hidden" name="image" id="image" value="<%=song.image%>">
                    <input type="hidden" name="name" id="name" value="<%= song.name%>">
                <button type="submit" class="button" ><h2  id="artist<%=song.id%>" >&#9825;</h2></button>
                </form>
            </div>
            <%})%>
</section>
</section>
<%- include('footer')%> 
               <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
       <script src="/js/app.js"></script> 
       <hr class="hr2">
            <hr class="hr">
            <hr class="hr">
            <hr class="hr1">
    </main>
    
</body>
</html>
