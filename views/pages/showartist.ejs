<!DOCTYPE html>
<html lang="en">

<%- include('head')%>

<body>

    <%- include('header')%>

    <main>
        <hr class="hr2">
        <hr class="hr">
        <hr class="hr">
        <hr class="hr1">
        <h2 class="listTitle">Result for "<%=searchFor%> "...</h2>
        <section class="flex">
            <section id='addSongByArtist' class="A-flex">
                <% songs.forEach(song=>{%>
                <div class="card">
                    <img class="imgSong" src="<%=song.image%>">
                    <h3 class="title1"><%=song.title%></h3>
                    <h2 class="title2"><%= song.name%></h2>
                    <audio class="audio1" controls><source src="<%=song.preview%>" type="audio/mpeg"></audio>
                    <form id="addSong<%=song.id%>" action="/addsong/<%=user%>" method="post">
                        <input type="hidden" name="id" id="id" value="<%=song.id%>">
                        <input type="hidden" name="user" id="user" value="<%=user%>">
                        <input type="hidden" name="title" id="title" value="<%=song.title%>">
                        <input type="hidden" name="preview" id="preview" value="<%=song.preview%>">
                        <input type="hidden" name="image" id="image" value="<%=song.image%>">
                        <input type="hidden" name="name" id="name" value="<%= song.name%>">
                        <button class="like" type="submit"><h2 id="artist<%=song.id%>">&#9825;</h2></button>
                    </form>
                </div>
                <%})%>
            </section>
        </section>
        <hr class="hr2 margintop">
        <hr class="hr">
        <hr class="hr">
        <hr class="hr1">
    </main>
    <%- include('footer')%>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>
    
</body>

</html>