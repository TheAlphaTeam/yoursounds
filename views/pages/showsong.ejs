            <input type="hidden" name="image"value="<%=song.title%>">
            <input type="hidden" name="name"value="<%= song.name%>">
        <button type="submit"  style="width: 50px;"" ><h2 onclick="change()" id="myButton1" >&#9825;</h2></button>
        </form></div>
    <%})%>
